<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/xxjapp/xdialog@3/xdialog.min.css" />
<script src="https://cdn.jsdelivr.net/gh/xxjapp/xdialog@3/xdialog.min.js"></script>

<div class="card text-center card-product">
    <div class="card-product__img">
        <img class="card-img" src="{{imagepath}}" alt="">
        <ul class="card-product__imgOverlay">
            <li><button onclick="location.href='/products/{{id}}'"><i class="ti-search"></i></button></li>
            <li><button onclick="show_alert()" class="add-to-cart" data-id="{{id}}"><i
                        class="ti-shopping-cart"></i></button></li>
            <li><button><i class="ti-heart"></i></button></li>
        </ul>
    </div>
    <div class="card-body">
        <p>{{Category.name}}</p>
        <h4 class="card-product__title"><a href="/products/{{id}}">{{name}}</a></h4>
        <p class="card-product__price">${{price}}</p>
    </div>
</div>
<style>
    .xd-content .xd-body .xd-body-inner {
        max-height: unset;
    }

    .xd-content .xd-body p {
        color: rgba(31, 41, 39, 0.973);
        text-shadow: 0 0 0px rgba(0, 0, 0, 0.75);
    }

    .xd-content .xd-button.xd-ok {
        background: lightblue;
    }
</style>
<script>
    function show_alert() {
        xdialog.alert("Thêm vào giỏ thành công !");
    }
</script>